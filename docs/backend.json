{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the SkillPathAI platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (matches auth UID)."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "First name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp when the user account was created.",
          "format": "date-time"
        },
        "authProviders": {
          "type": "array",
          "description": "List of authentication providers used (e.g., 'google.com', 'github.com').",
          "items": {
            "type": "string"
          }
        },
        "githubUsername": {
          "type": "string",
          "description": "The user's GitHub username, available when signing in with GitHub."
        },
        "skills": {
          "type": "array",
          "description": "List of user's current skills, can be manually entered or synced from GitHub.",
          "items": {
            "type": "string"
          }
        },
        "targetRole": {
          "type": "string",
          "description": "The user's target career role."
        },
        "targetSector": {
          "type": "string",
          "description": "The user's target career sector."
        },
        "roadmapProgress": {
          "type": "string",
          "description": "The current status of the user's roadmap.",
          "enum": [
            "Not Started",
            "In Progress",
            "Completed"
          ]
        },
        "github": {
          "type": "object",
          "description": "User's GitHub profile data fetched from the API.",
          "properties": {
            "username": { "type": "string" },
            "profileUrl": { "type": "string" },
            "avatarUrl": { "type": "string" },
            "publicRepoCount": { "type": "number" },
            "followers": { "type": "number" },
            "following": { "type": "number" },
            "lastSyncedAt": { "type": "string", "format": "date-time" },
            "connectedAt": { "type": "string", "format": "date-time" }
          }
        },
        "roadmap": {
          "type": "array",
          "description": "The personalized learning roadmap generated by the AI.",
          "items": { "type": "object" }
        }
      },
      "required": [ "id", "email", "createdAt" ]
    },
    "Project": {
      "title": "Project",
      "type": "object",
      "description": "Represents a user's project, either entered manually or imported from GitHub.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the project." },
        "name": { "type": "string", "description": "The name of the project." },
        "description": { "type": "string", "description": "A brief description of the project." },
        "status": {
          "type": "string",
          "description": "The current status of the project (for manual projects).",
          "enum": [ "Planned", "In Progress", "Completed" ]
        },
        "skills": {
          "type": "array",
          "description": "List of skills used in this project.",
          "items": { "type": "string" }
        },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp when the project was created." },
        "source": { "type": "string", "enum": ["manual", "github"], "description": "The origin of the project data." },
        "url": { "type": "string", "description": "URL to the project (e.g., GitHub repository)." },
        "pushed_at": { "type": "string", "format": "date-time", "description": "Timestamp of the last push (for GitHub projects)." },
        "stars": { "type": "number", "description": "Number of stars (for GitHub projects)." },
        "analysis": {
          "type": "object",
          "description": "Rule-based analysis of the project.",
          "properties": {
            "projectType": { "type": "string" },
            "primarySkills": { "type": "array", "items": { "type": "string" } },
            "supportingSkills": { "type": "array", "items": { "type": "string" } },
            "experienceLevel": { "type": "string" },
            "strengths": { "type": "array", "items": { "type": "string" } },
            "improvementSuggestions": { "type": "array", "items": { "type": "string" } }
          }
        }
      },
      "required": [ "id", "name", "source" ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "github.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores user profile data. Path-based ownership ensures only the user can access their own profile."
        }
      },
      {
        "path": "/users/{userId}/projects/{projectId}",
        "definition": {
          "entityName": "Project",
          "schema": { "$ref": "#/backend/entities/Project" },
          "description": "Stores individual projects for a user, both manual and imported from GitHub."
        }
      }
    ]
  }
}
